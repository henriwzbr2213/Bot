# Shared
NODE_ENV=development
LOG_LEVEL=info

# API
API_PORT=3000
DATABASE_URL=file:./dev.db
API_BASE_URL=http://localhost:3000
JWT_SECRET=change-me

# Discord Bot
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
BOT_PREFIX=.

# GCP
GCP_PROJECT_ID=
GCP_LOCATION=us-central1
GCS_BUCKET_BR=discloud-zips-br
GCS_BUCKET_US=discloud-zips-us
ARTIFACT_REGISTRY_REPO=discloud-apps
CLOUD_BUILD_REGION=global
CLOUD_BUILD_TRIGGER_SA=

# GKE contexts (kubeconfig local or injected in runtime)
K8S_CONTEXT_BR=gke_project_southamerica-east1_discloud-br
